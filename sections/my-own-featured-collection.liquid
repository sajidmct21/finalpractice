<div class="flex flex-col items-center my-8">
  <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>
  <div class="grid grid-col-1 md:grid-cols-4 gap-4">
    {%- for product in section.settings.featured_collection.products limit: section.settings.number_product_to_show -%}
  {%- render 'my-product-card', product: product -%}
  {%- else -%}
    {%- for item in (1..4) -%}
      {%- render 'my-product-card-placeholder'-%}
    {%- endfor -%}
{%- endfor -%}
  </div>
</div>


{% schema %}
  {
    "name": "Featured Collection",
    "tag": "section",
    "class": "featured-collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default":"Featured Collection"
      },
      {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "number_product_to_show",
        "max": 12,
        "min": 4,
        "default":4,
        "label": "Number of Products"
      }
    ],
    "presets": [
      {
        "name": "My Featured Collection",
        "settings": {
        }
      }
    ]
  }
{% endschema %}