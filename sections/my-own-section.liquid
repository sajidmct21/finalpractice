{% stylesheet %}
  .pro-card{
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
  }
{% endstylesheet %}
<h1>My Collections</h1>
{% for collection in collections %}
  <h2>{{ collection.title }}</h2>
  <span>{{ collection.handle }}</span>
{% endfor %}
<hr>
{%- for product in collections.frontpage.products -%}
  <div class="pro-card">
    <img src="{{ product.featured_image | image_url: width:250 }}" width="" height="" alt="{{ product.title }}">
    <h2>{{ product.title }}</h2>
    <p>{{ product.price | money }}</p>
  </div>
{%- endfor -%}
{% schema %}
{
  "name": "Products List",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select a Collection"
    }
  ],
  "presets": [
    {
      "name": "Products List",
      "category": "Custom",
      "settings": {}
    }
  ]
}
{% endschema %}
