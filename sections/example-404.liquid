{% comment %}
  <h1>I am in example 404 section</h1>
  <h1>{{ 'general.404.title'| t }}</h1>
  <p>{{ 'general.404.sub_text' | t }}</p>
{% endcomment %}

<div class="my-own">
  <h1>{{ section.settings.title }}</h1>
  <p>{{ section.settings.sub_heading }}</p>

  {%- if section.settings['button-url'] == blank -%}
    {%- assign shop_url = shop.secure_url -%}
  {%- else -%}
    {%- assign shop_url = section.settings['button-url'] -%}
  {%- endif -%}
  <button class="btn">
    <a href="{{shop_url}}">{{ section.settings['button-label'] }}</a>
  </button>
</div>

<style>
  .btn{
    padding: 10px 20px;
    margin:20px;
    border:none;
    border-radius:10px;
    cursor:pointer;
    background:green;
  }
  .btn a{
    color:white;
    text-decoration:none;
  }
  .my-own {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>

{% schema %}
{
  "name": "example-404",
  "tag": "section",
  "class": "example-404",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "404"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "This page is not found"
    },
    {
      "type": "text",
      "id": "button-label",
      "label": "Button Label",
      "default": "Back to Home Page"
    },
    {
      "type": "url",
      "id": "button-url",
      "label": "Button Url"
    }
  ],
  "presets": [
    {
      "name": "example-404",
      "settings": {}
    }
  ]
}
{% endschema %}
